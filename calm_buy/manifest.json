{
    "manifest_version": 3,
    "name": "Calm Buy",
    "version": "1.0",
    "description": "Impulse Purchase Checker with sentiment analysis.",
    "permissions": ["tabs", "activeTab", "storage"],
    "background": {
       "service_worker": "background.js"
    },
    "action": {
       "default_popup": "popup.html",
       "default_icon": "assets/icon.png"
    },
    "content_scripts": [
       {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
       }
    ]
 }